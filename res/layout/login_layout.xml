<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cyberswift.forestmonitoring.activities.LoginActivity"
    android:background="@drawable/loginbg" >


    <ImageView
        android:id="@+id/iv_logoLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip"
        android:layout_marginBottom="20dip"
        android:background="@drawable/login_logo"/>


    <RelativeLayout 
        android:id="@+id/rl_username"
        android:layout_below="@+id/iv_logoLogin"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/username_bg">
        
         <ImageView
        android:id="@+id/iv_uname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/user" />
        
         <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/iv_uname" 
        android:layout_centerVertical="true"                
        android:hint="Username"
        android:ems="18"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColorHint="@color/username_offfocus"
        android:background="@android:color/transparent" />
        
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/rl_password"
        android:layout_below="@+id/rl_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/username_bg">
        
         <ImageView
        android:id="@+id/iv_password"     
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/password"/>
        
         <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" 
        android:layout_toRightOf="@+id/iv_password"               
        android:ems="18"
        android:inputType="numberPassword"
        android:hint="Password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:singleLine="true"
        android:textAppearance="?android:attr/textAppearanceSmall"       
        android:textColorHint="@color/username_offfocus"
        android:background="@android:color/transparent"/>
        
        
    </RelativeLayout>
   
   

