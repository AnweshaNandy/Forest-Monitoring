<?xml version="1.0" encoding="utf-8"?>  
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <stroke
                android:width="1dp"
                android:color="#445912" />
            
            <corners
                android:radius="3dp" />
            
            <solid
                android:color="#8da751" />
                       
        </shape>
        
    </item>
    <item android:state_pressed="false" >
        <shape>
            <stroke
                android:width="1dp"
                android:color="#445912" />
            
            <corners
                android:radius="3dp" />
            
            <solid
                android:color="#78913e" />
                       
        </shape>
    </item>
</selector>